<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_password_elements"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/sletters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/small_letters" />

    <CheckBox
        android:id="@+id/cletters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/capital_letters" />

    <CheckBox
        android:id="@+id/digits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/digits" />

    <CheckBox
        android:id="@+id/specChar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/special_chars" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/etpassLenght"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Password Length"
        android:inputType="number" />
        <TextView
            android:id="@+id/tvErr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set password lenght"
            android:textAllCaps="true"
            android:textColor="#B00020"
            android:visibility="invisible"
            android:layout_marginLeft="8dp"/>
</LinearLayout>
    <Button
        android:id="@+id/generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate" />


    <TextView
        android:id="@+id/tvPasswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        android:textSize="24sp"
        android:visibility="invisible" />


</LinearLayout>